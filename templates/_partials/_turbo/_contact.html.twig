{% block success_stream %}
<turbo-stream action="append" target="flash">
    <template>
        <div class="p-4 mb-1 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400 duration-300 transition-all"
            data-controller="flash">
            <div class="flex flex-row items-center justify-between">
                <div class="flex flex-row items-center justify-between">
                    <span class="font-medium">
                        <svg>
                            <use href="#plane" />
                        </svg>
                    </span>
                    <span>
                        &nbsp; {{message}}
                    </span>
                </div>

                <button class="justify-end font-black text-sm" data-action="click->flash#remove">&#x2716;</button>
            </div>
        </div>
    </template>
</turbo-stream>

<turbo-stream action="replace" targets="form[name=contact]">
    <template>
        {% include '_partials/_form/contact.html.twig'%}
    </template>
</turbo-stream>
{% endblock %}

