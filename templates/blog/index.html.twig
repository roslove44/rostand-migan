{% extends 'base.html.twig' %}

{# Déclaraton des variables #}
{% set seo_title = "Blog - Rostand MIGAN" %}
{% set meta_description = "Explorez le blog de Rostand MIGAN, Développeur Web Full Stack. Découvrez des articles sur le
développement web, les technologies fintech, les meilleures pratiques en programmation, et des conseils pour les
développeurs. Restez à jour avec les dernières tendances et astuces." %}
{% set seo_image = absolute_url(asset('img/og_image/blog.png')) %}
{# End Déclaraton des variables #}

{# SEO #}
{% block meta_description %}{{meta_description}}{% endblock %}
{% block meta_keywords %}Blog, {{parent()}}{% endblock %}
{% block og_title %}{{seo_title}}{% endblock %}
{% block og_description %}{{meta_description}}{% endblock %}
{% block og_image %}{{seo_image}}{% endblock %}
{% block twitter_title %}{{seo_title}}{% endblock %}
{% block twitter_description %}{{meta_description}}{% endblock %}
{% block twitter_image %}{{seo_image}}{% endblock %}
{# End SEO #}

{% block title %}{{seo_title}}{% endblock %}

{% block body %}
<section id="blog" class="min-h-[calc(100dvh-70px)] mx-auto lg:flex justify-center" data-controller="blog">
    <div
        class="px-5 pt-2 pb-10 sm:px-4 w-full sm:w-9/12 lg:w-auto lg:pl-5 xl:max-w-3xl mx-auto lg:mx-0 border-r border-r-slate-200 shadow-md">

        <div class="lg:hidden">
            <div class="flex items-center gap-2">
                <img src="{{asset('img/rostand-id.webp')}}" alt="id rostand"
                    class="h-20 w-20 object-cover rounded-full align-middle">
                <h1 class="mt-3 text-base font-bold text-slate-700">
                    Rostand MIGAN
                </h1>
            </div>

            <h2 class="mt-2">
                Web development, Fintech, Science
            </h2>

            <div class="flex gap-2 mt-2 justify-start">
                <a href="{{path('app_main_contact')}}"
                    class="rounded-full py-2 px-4 flex items-center gap-2 duration-300 border border-rostBlue  hover:bg-blue-800 bg-rostBlue text-sky-50 transition-all">
                    <div class="text-sm font-medium leading-none">Contact</div>
                </a>
            </div>
        </div>

        <p class="hidden lg:block mt-3 lg:text-xl xl:text-2xl font-bold text-slate-700">
            Rostand MIGAN
        </p>

        <h2 class="hidden">Blog</h2>

        <hr class="mt-5 bg-sky-800">

        <!--Liste des articles-->
        <div class="flex flex-col gap-5 mt-12" data-blog-target="postsContainer">

            {# Info Start #}
            <div class="p-4 mb-4 text-sm text-blue-800 rounded-lg bg-blue-50 dark:bg-gray-800 dark:text-blue-400"
                role="alert">
                <span class="font-medium">Mes articles seront bientôt disponibles ici.</span>
                Revenez prochainement pour les découvrir !
            </div>
            <div class="shadow rounded-md p-4 w-full mx-auto">
                <div class="animate-pulse flex flex-col space-x-4">
                    <div class="flex-1 space-y-6 py-1">
                        <div class="h-2 w-1/3 bg-slate-700 rounded"></div>
                        <div class="h-2 bg-slate-700 rounded"></div>
                        <div class="space-y-3">
                            <div class="grid grid-cols-3 gap-4">
                                <div class="h-2 bg-slate-700 rounded col-span-2"></div>
                                <div class="h-2 bg-slate-700 rounded col-span-1"></div>
                            </div>
                            <div class="h-2 bg-slate-700 rounded"></div>
                            <div class="h-2 bg-slate-700 rounded"></div>
                            <div class="h-2 bg-slate-700 rounded"></div>
                        </div>
                    </div>
                </div>
            </div>
            {# End Info #}

        </div>
        <!-- End Liste des articles-->

    </div>

    <!--Blog SideBar-->
    <div class="hidden min-w-[352px] ml-8 lg:block mr-10">
        <div class="fixed">
            <div class="flex items-center gap-2">
                <img src="{{asset('img/rostand-id.webp')}}" alt="id rostand"
                    class="h-20 w-20 object-cover rounded-full align-middle">
                <p class="mt-3 text-base font-bold text-slate-700">
                    Rostand MIGAN
                </p>
            </div>

            <p class="mt-2">
                Web development, Fintech, Science
            </p>

            <div class="flex gap-2 mt-2 justify-start">
                <a href="{{path('app_main_contact')}}"
                    class="rounded-full py-2 px-4 flex items-center gap-2 duration-300 border border-rostBlue  hover:bg-blue-800 bg-rostBlue text-sky-50 transition-all">
                    <div class="text-sm font-medium leading-none">Contact</div>
                </a>
            </div>
        </div>
    </div>
    <!--End Blog SideBar-->

</section>
{% endblock %}