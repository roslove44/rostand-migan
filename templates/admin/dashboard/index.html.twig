{% extends "adminBase.html.twig" %}

{% block body %}
<div class="content-wrapper">
    <div class="row">
        <div class="col-sm-12">
            <div class="home-tab">
                <div class="d-sm-flex align-items-center justify-content-between border-bottom">
                    {% include "_partials/_admin/_navTabs.html.twig" %}
                </div>
                <div class="tab-content tab-content-basic">
                    <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview">
                        <div class="row flex-grow">
                            {% if works|length >= 1 %}
                            {% for work in works %}
                            <div class="col-12 col-sm-6 col-lg-4 col-xl-3 grid-margin stretch-card">
                                <div class="card card-rounded" style="width: 380px !important;">
                                    <img class="card-img-top"
                                        src="{{ asset('uploads/work/thumbnail/' ~ work.thumbnail) }}"
                                        style="height: 200px; object-fit: contain;">
                                    <div class="card-body">
                                        <div class="d-sm-flex justify-content-between align-items-start">
                                            <div>
                                                <h4 class="card-title card-title-dash">
                                                    {{work.title}}
                                                </h4>
                                                <p class="card-subtitle card-subtitle-dash">
                                                    {{work.summary}}
                                                </p>
                                                <ul>
                                                    <li>
                                                        Lien du projet :
                                                        <a href="{{work.url}}">{{ work.url|replace({'http://': '',
                                                            'https://':
                                                            '', 'www.': ''})}}</a>
                                                    </li>
                                                    <li>
                                                        Type de lien : {{work.urlType}}
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="w-100 d-flex justify-content-between align-items-start">
                                            <ul class="w-100 d-flex flex-row justify-content-between"
                                                style="list-style-type: none;">
                                                <li>
                                                    <a href="{{path('admin_project_edit', {slug: work.slug})}}"
                                                        class="btn btn-outline-warning btn-sm" title="Editer">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="{{path('app_work_detail', {slug: work.slug})}}"
                                                        class="btn btn-outline-primary btn-sm" title="Voir"
                                                        target="_blank">
                                                        <i class="fa fa-eye"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="" class="btn btn-outline-danger btn-sm" title="Supprimer">
                                                        <i class="fa fa-trash-o"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}